<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <table>
    <tr>
      <td><%= f.label :handle %></td>
      <td><%= f.text_field :handle, disabled: true %></td>
    </tr>
    <tr>
      <td><%= f.label :email %></td>
      <td><%= f.email_field :email, autofocus: true %></td>
    </tr>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <tr><td colspan="2">Currently waiting confirmation for: <%= resource.unconfirmed_email %></td></tr>
    <% end %>

    <tr>
      <td><%= f.label :password %><br/>
        <i>(leave blank to not change it)</i>
      </td>
      <td><%= f.password_field :password, autocomplete: "off", minlength: 8 %></td>
    </tr>
    <tr>
      <td><%= f.label :password_confirmation %></td>
      <td><%= f.password_field :password_confirmation, autocomplete: "off" %></td>
    </tr>

    <tr>
      <td><%= f.label :current_password %><br/>
        <i>(to confirm your changes)</i></td>
      <td><%= f.password_field :current_password, autocomplete: "off" %></td>
    </tr>
    <tr>
      <td><%= f.label :city %></td>
      <td><%= f.text_field :city %></td>
    </tr>
    <tr>
      <td><%= f.label :state %></td>
      <td><%= f.text_field :state %></td>
    </tr>
    <tr>
      <td><%= f.label :country %></td>
      <td><%= f.text_field :country %></td>
    </tr>
    <tr>
      <td><%= f.label :bio %></td>
      <td><%= f.text_area :bio, style: "height:200px;width:200px" %></td>
    </tr>
  </table>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
