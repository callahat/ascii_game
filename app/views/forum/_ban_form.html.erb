<%= error_messages_for 'forum_restriction' %>

<p>Select forum restriction and duration for <%=h @player.handle %></p>

<p><label for="forum_restriction_restriction">Restriction</label><br/>
<%= select('forum_restriction', 'restriction', @restrictions) %></p>

<p><label for="thred_title">Exires (in days<% if session[:player].forum_attribute.mod_level < 9 %>, max <%= (session[:player].forum_attribute.mod_level * 2).to_s %><% else %>, blank = no expiration<% end %>):</label><br/>
<%= text_field 'forum_restriction', 'expires' %></p>
