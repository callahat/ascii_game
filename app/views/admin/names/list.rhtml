<h1>Listing names</h1>

<table>
  <tr>
  <% for column in Name.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for name in @names %>
  <tr>
  <% for column in Name.content_columns %>
    <td><%=h name.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => name %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => name %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => name }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @names %> 

<br />

<%= link_to 'New name', :action => 'new' %>
