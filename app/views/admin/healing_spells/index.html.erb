<h1>Listing healing_spells</h1>

<table>
  <tr>
    <th>name</th>	   
    <th>description</th>	   
    <th>min level</th>	   
    <th>min heal</th>	   
    <th>max heal</th>	   
    <th>disease</th>	   
    <th>mp cost</th>	   
    <th>cast on others?</th>	 
  </tr>
  
<% for healing_spell in @healing_spells %>
  <tr>
<td><%= healing_spell.name %></td>	   
<td><%= healing_spell.description %></td>	   
<td><%= healing_spell.min_level %></td>	   
<td><%= healing_spell.min_heal %></td>	   
<td><%= healing_spell.max_heal %></td>	   
<td><%= healing_spell.disease.try(:name) || "N/A" %></td>
<td><%= healing_spell.mp_cost %></td>	   
<td><%= healing_spell.cast_on_others %></td>
    <td><%= link_to 'Show', [:admin,healing_spell] %></td>
    <td><%= link_to 'Edit', edit_admin_healing_spell_path(healing_spell) %></td>
    <td><%= link_to 'Destroy', admin_healing_spell_path(healing_spell, page: params[:page]), data:{confirm: "Really delete #{healing_spell.name}?"}, method: :delete %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @healing_spells %> 

<br />

