<h1>Listing worlds</h1>

<table>
  <tr>
  <% for column in World.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for world in @worlds %>
  <tr>
  <% for column in World.content_columns %>
    <td><%=h world.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', [:admin,world] %></td>
    <td><%= link_to 'World Maps', admin_world_maps_path(world) %></td>
    <td><%= link_to 'Edit', edit_admin_world_path(world) %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @worlds %> 

