<h1>Listing worlds</h1>

<table>
  <tr>
  <% for column in World.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for world in @worlds %>
  <tr>
  <% for column in World.content_columns %>
    <td><%=h world.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => world %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => world %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @worlds %> 

<br />

<%= link_to 'New world', :action => 'new' %>
