<h1>Listing diseases</h1>

<table>
  <tr>
    <th>name</th>
    <th>virility</th>
    <th>trans method</th>
    <th>dam</th>
    <th>dfn</th>
    <th>str</th>
    <th>dex</th>
    <th>mag</th>
    <th>int</th>
    <th>con</th>
    <th>HP /turn</th>
    <th>MP /turn</th>
    <th>NPC fatal</th>
    <th>peasant fatality</th>
    <th>min peasants</th>
  </tr>

<% for disease in @diseases %>
  <tr>
    <td><%= disease.name %></td>
    <td><%= disease.virility %></td>
    <td><%= SpecialCode.get_text('trans_method',disease.trans_method) %></td>
    <td><%= disease.stat.dam %></td>
    <td><%= disease.stat.dfn %></td>
    <td><%= disease.stat.str %></td>
    <td><%= disease.stat.dex %></td>
    <td><%= disease.stat.mag %></td>
    <td><%= disease.stat.int %></td>
    <td><%= disease.stat.con %></td>
    <td><%= disease.HP_per_turn %></td>
    <td><%= disease.MP_per_turn %></td>
    <td><%= disease.NPC_fatal %></td>
    <td><%= disease.peasant_fatality %></td>
    <td><%= disease.min_peasants %></td>
    <td><%= link_to 'Show', [:admin,disease] %></td>
    <td><%= link_to 'Edit', edit_admin_disease_path(disease) %></td>
    <td><%= link_to 'Destroy', [:admin,disease], data:{confirm: "Really delete #{disease.name}?"}, method: :delete %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @diseases %> 

