<% if @player_character || @no_king %>

<%= form_tag management_do_retire_path, :method => :post do %>
<p><%=h @message %><br/></p>
  <%= submit_tag 'Confirm' %> | <%= submit_tag 'Cancel' %>
<% end %>

<% else %>
<h1>Who shall be the new King of <%= session[:kingdom].name %>?</h1>
<%=h @message %>

<%= form_tag management_retire_path, :method => :post do %>
<p><label for="kingdom_new_king">(enter a name, or nothing to leave the kingdom without a king):</label><br/>
<input type="text" name="new_king" /><br/>
  <%= submit_tag 'Accept' %> or  <%= submit_tag 'Abandon' %>
<% end %>
<br/>
<%= link_to 'Cancel', management_root_path %>

<% end %>

