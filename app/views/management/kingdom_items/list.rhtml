<h1>Listing kingdom_items</h1>

<table>
  <tr>
    <th>Item</th>
    <th>Quantity</th>
  </tr>
  
<% for kingdom_item in @kingdom_items %>
  <tr>
    <td><%=h kingdom_item.item.name %></td>
    <td><%=h kingdom_item.quantity %></td>
    <td><%= link_to 'Remove', :action => 'remove', :id => kingdom_item %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @kingdom_items %> 

<br />

<%= link_to 'Store Items', :action => 'list_inventory' %>
