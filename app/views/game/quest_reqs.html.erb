<table><tr><th colspan=3>Requirements:</th></tr>

<% for qck in @quest.creature_kills do %>
<tr>
  <td><%= qck.to_sentence %></td>
 <% if @quest.quest_status == SpecialCode.get_code("quest_status","design") && controller.class == Management::QuestsController %>
  <td><%= link_to "edit", edit_management_quest_req_path(quest_id: params[:id], id: qck, type: "creature_kill") %></td>
  <td><%= link_to "drop", management_quest_req_path(quest_id: params[:id], id: qck, type: "creature_kill"), data:{confirm: "Are you sure?"}, method: :delete %></td>
 <% end %>
</tr>
<% end %>

