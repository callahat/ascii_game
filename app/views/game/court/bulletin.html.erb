<h1>Kingdom Notices for <%=h @pc.present_kingdom.name %></h1>

<table>
  <tr>
    <th>Date</th>
    <th>Notice</th>
  </tr>

<% for notice in @notices %>
  <tr>
    <td><%=h notice.created_at.strftime("%I:%M%p %m/%d/%Y") %></td>
    <td><%= notice.text.html_safe %><br/><i>Signed:<% if notice.signed.nil? %>anonymous<% else %><%=h notice.signed %><% end %></i></td>
  </tr>
<% end %>
</table>

<%= will_paginate @notices %>

<br />


<p><%= link_to 'Back', :action => 'castle' %></p>
